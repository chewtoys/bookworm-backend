{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["../node_modules", "../lib", "../index.ts"]
}
